# ScreenControl — Environment Configuration
# Copy to .env and customize.

# ─── Server ──────────────────────────────────────────────────
SC__SERVER__HOST=0.0.0.0
SC__SERVER__API_PORT=8080
SC__SERVER__RELAY_PORT=8041
SC__SERVER__LOG_LEVEL=debug

# ─── Database ────────────────────────────────────────────────
SC__DATABASE__URL=postgres://screencontrol:screencontrol@localhost:5432/screencontrol
SC__DATABASE__MAX_CONNECTIONS=10

# ─── Redis ───────────────────────────────────────────────────
SC__REDIS__URL=redis://localhost:6379

# ─── Auth ────────────────────────────────────────────────────
SC__AUTH__JWT_SECRET=change-me-to-a-random-secret-in-production
SC__AUTH__ACCESS_TOKEN_TTL_SECS=3600
SC__AUTH__REFRESH_TOKEN_TTL_SECS=604800

# ─── Agent ───────────────────────────────────────────────────
SC_SERVER_URL=ws://localhost:8080/ws/agent
SC_TENANT_TOKEN=sc-default-token-change-me
SC_RELAY_PORT=8041

# ─── Web Console (Next.js) ───────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# ─── MinIO / S3 ──────────────────────────────────────────────
MINIO_ROOT_USER=screencontrol
MINIO_ROOT_PASSWORD=screencontrol123
AWS_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=screencontrol
AWS_SECRET_ACCESS_KEY=screencontrol123
AWS_REGION=us-east-1
