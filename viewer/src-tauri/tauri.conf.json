{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScreenControl Viewer",
  "version": "0.1.0",
  "identifier": "com.screencontrol.viewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ScreenControl",
        "width": 1280,
        "height": 720,
        "minWidth": 640,
        "minHeight": 400,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "screencontrol"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "linux": {
      "deb": {
        "desktopTemplate": "desktop-template.desktop"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}